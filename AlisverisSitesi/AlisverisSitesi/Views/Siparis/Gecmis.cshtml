@model IEnumerable<AlisverisSitesi.Models.SiparisGecmisi>
<h2>Sipariş Geçmişi</h2>

<table class="table">
    <thead>
        <tr><th>#</th><th>Ürün</th><th>Adet</th><th>Fiyat</th><th>Tarih</th></tr>
    </thead>
    <tbody>
    @foreach(var s in Model) {
        <tr>
            <td>@s.Id</td>
            <td>@s.UrunAdi</td>
            <td>@s.Adet</td>
            <td>@s.Fiyat.ToString("C")</td>
            <td>@s.SiparisTarihi.ToString("g")</td>
        </tr>
    }
    </tbody>
</table>
